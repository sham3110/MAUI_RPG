<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_RPG.MainPage"
             Title="Awesome Game" Height="768" Width="1024">

    <ScrollView>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="225"/>
        </Grid.RowDefinitions>
 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
 
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Menu" Background="AliceBlue"/>
        <Label Grid.Row="1" Grid.Column="0" Text="Player Data" Background="Aquamarine"/>
        <Label Grid.Row="1" Grid.Column="1" Text="Game Data" Background="Beige"/>
        <Label Grid.Row="2" Grid.Column="0" Text="Inventory/Quests" Background="BurlyWood"/>
        <Label Grid.Row="2" Grid.Column="1" Text="Combat/Movement Controls" Background="Lavender"/>
 
    </Grid>
    </ScrollView>

</ContentPage>
